<div id="wrap">
    <div id="main">
        <div id="header">
            <div id="header_header"></div>
            <div id="header_footer">
                <div class="alert alert-info" role="alert">
                @Html.DisplayName("欢迎登陆")
                </div>
            </div>
        </div>
        @using (Html.BeginForm("Login", "Users", FormMethod.Post))
        {
        <div id="body_username" class="form-group input-group-lg">
            @Html.TextBoxFor(user => user.UserName, new {@class="form-control",placeholder="用户名"}) 
            @Html.ValidationMessageFor(user=>user.UserName,"", new {style="color:red;" })           
        </div>
        @Html.Hidden("label01")
        <div id="body_password" class="form-group input-group-lg">
            @Html.PasswordFor(user => user.Password,new {@class="form-control",placeholder="密码" })
            @Html.ValidationMessageFor(user => user.Password,"", new { style = "color:red;" })            
        </div>
        <!--登录按钮-->
        <div id="body_login">
            <p>
                <input type="submit" name="login" class="btn btn-primary btn-lg btn-block" value="登录" />
            </p>
        </div>
        }
        <!--底部链接-->
        <div id="footer">
            <div id="footer_rememberme">
                <label class="checkbox-inline">
                    @Html.CheckBox("RemenberMe",false)
                    记住我(7天)
                </label>
            </div>
            <div id="footer_link">
                @Html.ActionLink("注册账号","Register", "Users")
                <a href="WebFindPassword.aspx">忘记密码</a>
            </div>
        </div>
    </div>
</div>
